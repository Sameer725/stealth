{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "moduleResolution": "node",
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "experimentalDecorators": true,
    "importHelpers": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@components": ["./src/components"],
      "@types": ["./src/types"],
      "@pages": ["./src/pages"],
      "@theme": ["./src/theme"],
      "@utils": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
